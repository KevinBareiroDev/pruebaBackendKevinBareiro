{
  "info": {
    "name": "API Gestión de Productos - Multi-Divisa",
    "description": "Colección de endpoints para la API RESTful de gestión de productos con soporte multi-divisa desarrollada en Laravel 12",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Listar todos los productos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products",
              "host": ["{{base_url}}"],
              "path": ["products"]
            },
            "description": "Obtiene una lista de todos los productos con sus relaciones (moneda base y precios alternativos)"
          },
          "response": []
        },
        {
          "name": "Crear un nuevo producto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Mouse Logitech MX Master 3\",\n  \"description\": \"Mouse ergonómico inalámbrico de alta precisión\",\n  \"price\": 99.99,\n  \"currency_id\": 1,\n  \"tax_cost\": 9.99,\n  \"manufacturing_cost\": 45.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/products",
              "host": ["{{base_url}}"],
              "path": ["products"]
            },
            "description": "Crea un nuevo producto en el sistema. Todos los campos son requeridos."
          },
          "response": []
        },
        {
          "name": "Obtener un producto específico",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products/1",
              "host": ["{{base_url}}"],
              "path": ["products", "1"]
            },
            "description": "Obtiene los detalles de un producto específico por su ID"
          },
          "response": []
        },
        {
          "name": "Actualizar un producto",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Laptop Dell XPS 15 (2026)\",\n  \"price\": 1399.99\n}"
            },
            "url": {
              "raw": "{{base_url}}/products/1",
              "host": ["{{base_url}}"],
              "path": ["products", "1"]
            },
            "description": "Actualiza los datos de un producto existente. Todos los campos son opcionales."
          },
          "response": []
        },
        {
          "name": "Eliminar un producto",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products/1",
              "host": ["{{base_url}}"],
              "path": ["products", "1"]
            },
            "description": "Elimina un producto (soft delete). El producto no se borra físicamente de la base de datos."
          },
          "response": []
        }
      ],
      "description": "Endpoints para la gestión completa de productos (CRUD)"
    },
    {
      "name": "Product Prices",
      "item": [
        {
          "name": "Listar precios de un producto",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products/1/prices",
              "host": ["{{base_url}}"],
              "path": ["products", "1", "prices"]
            },
            "description": "Obtiene todos los precios alternativos de un producto en diferentes monedas"
          },
          "response": []
        },
        {
          "name": "Crear un precio alternativo",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currency_id\": 2,\n  \"price\": 50000.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/products/1/prices",
              "host": ["{{base_url}}"],
              "path": ["products", "1", "prices"]
            },
            "description": "Crea un nuevo precio para el producto en una moneda diferente"
          },
          "response": []
        },
        {
          "name": "Eliminar un precio alternativo",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products/1/prices/1",
              "host": ["{{base_url}}"],
              "path": ["products", "1", "prices", "1"]
            },
            "description": "Elimina un precio alternativo de un producto"
          },
          "response": []
        }
      ],
      "description": "Endpoints para la gestión de precios alternativos en diferentes monedas"
    }
  ]
}
